{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make build",
            "problemMatcher": [
                "$eslint-compact"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "make build && sudo dosbox -c \"mount G ~/asm-game\" -c \"G:\"",
            "problemMatcher": [
                "$eslint-compact"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}